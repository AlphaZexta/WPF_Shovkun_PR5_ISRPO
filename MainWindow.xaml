<Window x:Class="WPF_Shovkun_PR5_ISRPO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Shovkun_PR5_ISRPO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Добавить..."/>
            </MenuItem>
            <MenuItem Header="Рисунки">
                <MenuItem Header="Рисунок 1" x:Name="D1" Click="D1_Click"></MenuItem>
                <MenuItem Header="Рисунок 2" x:Name="D2" Click="D2_Click"></MenuItem>
                <MenuItem Header="Рисунок 3" x:Name="D3" Click="D3_Click"></MenuItem>
                <Separator/>
                <MenuItem Header="Выход" Click="MenuItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Image Source="D:\s\C1.jpg" x:Name="I1" Height="370" Visibility="Hidden"/>
        <Image Source="D:\s\C2.jpg" x:Name="I2" Height="370" Visibility="Hidden"/>
        <Image Source="D:\s\C3.jpg" x:Name="I3" Height="370" Visibility="Hidden"/>
    </Grid>
</Window>
